/**
 * Exclusive-or gate:
 * out = not (a == b)
 */

CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    // Or(And(a, Not(b)), And(Not(a), b)) iff Xor(a, b)
	Not(in=b, out=notB);
	And(a=a, b=notB, out=aAndNotB);
	Not(in=a, out=notA);
	And(a=notA, b=b, out=notAAndB);
	Or(a=notAAndB, b=aAndNotB, out=out);
}